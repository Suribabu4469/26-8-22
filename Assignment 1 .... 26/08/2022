#include <stdio.h>
#include<ctype.h>
#include<string.h>

int main()
{
    char s[100];
    int upr=0,lwr=0,tot=0;
    puts("enter a string");
    gets(s);
    for(int i=0;s[i]!='\0';i++){
        if(isupper(s[i])!=0){
            upr++;
        }else{
            lwr++;
        }
        tot++;
    }
    printf("lower = %d \n upper = %d \n total = %d\n",lwr,upr,tot);
    return 0;
}
